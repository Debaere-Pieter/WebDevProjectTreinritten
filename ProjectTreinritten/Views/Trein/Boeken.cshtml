<script>
    $(function () {
        $("#datepicker").datepicker({
            minDate: "+2w",
            dateFormat: "dd-mm-yy",
        });

    });
    const changeVelden = () => {
        for (let i = 1; i <= $("#aantalPersonen").children("option:selected").val(); i++) {
            $("#naam" + i).show();
            $("#voornaam" + i).show();
        }
        for (let i = 10; i > $("#aantalPersonen").children("option:selected").val(); i--) {
            $("#naam" + i).hide();
            $("#voornaam" + i).hide();
        }
    }
    //functie uitvoeren als pagina laad zodat er maar voor één persoon inputvelden zichtbaar zijn
    changeVelden();
   
    const removeSelectedStation = () => {
        $('#Eindpunt option').each(function (index, element) {
            if (element.value != $("#Vertrekpunt").children("option:selected").val() || element.value == 0) {
                element.style.display = "block"
            }
            else {
                element.style.display = "none"
            }
        });
        $("#Eindpunt").val(0)
    }

    const setHotels = () => {
        $('#Hotel option').each(function (index, element) {
            if (element.value === $("#Eindpunt").children("option:selected").val() || element.value == 0) {
                element.style.display = "block"
            }
            else {
                element.style.display = "none"
            }
        });
        $("#Hotel").val(0)
    }
    setHotels();
</script>



